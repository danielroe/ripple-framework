{
  "name": "@dpc-sdp/ripple-ui-core",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src",
    "./postcssrc.json",
    "README.md"
  ],
  "main": "./dist/rpl-lib.umd.js",
  "module": "./dist/rpl-lib.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/rpl-lib.es.js",
    "./nuxt": "./dist/nuxt.js",
    "./webcomponents": "./dist/web-components/rpl-wc.es.js",
    "./style": "./dist/global.css",
    "./style/components": "./dist/style.css",
    "./style/breakpoints": "./src/styles/_breakpoints.css"
  },
  "scripts": {
    "dev": "concurrently \"wait-on -i 2000 tcp:6006 && yarn test:storybook --watch\" \"yarn:watch\" \"yarn:storybook\" --handle-input",
    "build": "yarn clean && yarn build:tokens && yarn build:styles && yarn build:types && yarn build:lib && yarn build:wc",
    "build:types": "tsc -p tsconfig.json",
    "build:lib": "vite build",
    "build:wc": "vite build --config wc.vite.config.ts",
    "build:styles": "vite build --config global-css.vite.config.ts && rimraf ./dist/delete.es.js",
    "build:svg-sprite": "ts-node ./src/scripts/generate-icon-sprite.ts",
    "build:custom-svg-list": "ts-node ./src/scripts/generate-custom-icon-list.ts",
    "build:tokens": "node ./tokens/processor.js",
    "types:check": "vue-tsc --noEmit",
    "watch": "yarn build:types && vite build --watch",
    "clean": "rimraf dist* && rimraf tsconfig.tsbuildinfo",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json",
    "test:storybook": "test-storybook --stories-json",
    "test:storybook-ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && yarn test:storybook\""
  },
  "dependencies": {
    "@nuxt/kit": "^3.0.0-rc.8",
    "mitt": "^3.0.0",
    "normalize.css": "^8.0.1",
    "postcss-for": "^2.1.1",
    "vue": "^3.2.31",
    "vue-social-sharing": "^4.0.0-alpha4"
  },
  "devDependencies": {
    "@originjs/vite-plugin-content": "^1.0.1",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vue/compiler-sfc": "^3.2.31",
    "@vueuse/core": "^9.1.0",
    "autoprefixer": "^10.4.2",
    "chromatic": "^6.5.3",
    "http-server": "^14.1.0",
    "jest-axe": "^6.0.0",
    "postcss-nested": "^5.0.6",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.4.3",
    "storybook-addon-designs": "^6.2.1",
    "style-dictionary": "^3.1.1",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "ts-node": "^10.7.0",
    "vite-dts": "^1.0.4",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-svg": "^0.1.0",
    "vite-svg-loader": "^3.4.0",
    "vue-tsc": "^0.31.2",
    "wait-on": "^6.0.1"
  }
}
